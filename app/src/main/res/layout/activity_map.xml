<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MapActivity">

    <!-- Google Map Fragment -->
    <fragment
        android:id="@+id/id_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints,UnknownFragment" />

    <!-- Route Info Overlay at Bottom -->
    <LinearLayout
        android:id="@+id/route_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/route_info_background"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/route_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route info will show here"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

</FrameLayout>
